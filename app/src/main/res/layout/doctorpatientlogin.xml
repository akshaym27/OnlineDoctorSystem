<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/doctorbtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="141dp"
        android:background="@color/colorPrimaryDark"
        android:text="Doctor  Login"
        android:textSize="25dp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/patientbtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:background="@color/colorPrimaryDark"
        android:text="Patient   Login"
        android:textSize="25dp"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/doctorbtn"
        android:layout_alignLeft="@+id/doctorbtn"
        android:layout_alignStart="@+id/doctorbtn" />
</RelativeLayout>